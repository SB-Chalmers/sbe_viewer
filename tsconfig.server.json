{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./server",
    "resolveJsonModule": true,
    "typeRoots": ["./server/types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": [
    "server/**/*",
    "server/types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
